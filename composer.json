{
    "name": "5upermario/validation-php",
    "description": "Validation classes for php",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "test": "phpunit",
        "coverage": "XDEBUG_MODE=coverage phpunit --coverage-text",
        "coverage-html": "XDEBUG_MODE=coverage phpunit --coverage-html=\"coverage\"",
        "static-analysis": "phpstan analyse --level=8 src tests"
    },
    "autoload": {
        "psr-4": {
            "Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.99",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-phpunit": "^0.12.22"
    }
}
